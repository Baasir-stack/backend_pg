<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
    <%- include('./styles/addBlog.ejs') %>

        <title>Add New Blog</title>
</head>

<body>
    <%- include('./partials/nav.ejs') %>
        <h2>Add New Blog</h2>
        <form method="POST" action="/blogs/" enctype="multipart/form-data">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" placeholder="Enter the title of your blog" required>

            <label for="body">Body:</label>
            <textarea id="body" name="body" rows="6" placeholder="Enter the body of your blog" required></textarea>

            <label for="cover-image">Cover Image URL:</label>
            <input type="file" id="cover-image" name="cover-image" accept="image/*" required>

            <input type="submit" value="Submit">
        </form>

        <%- include('./partials/script.ejs') %>
</body>

</html>